<% include ./partials/header.ejs%>


<% include ./partials/navbar.ejs %>

<section class="paint-set" >
    <div class="dark-overlay">
        <div class="paint-set-content">
            <div class="container text-white mx-5 mb-5">
                <div class="row text-center scroll-down">
                    <div class="col-md-6 col-sm-12">
                        <img src="img/arrow-rellax.png" width="20%" id="arrow-rellax" class="rellax"
                             data-rellax-speed="8" alt="">
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <img src="img/arrow-down.gif" alt="" width="20%" class="pb-3">
                        <h3 class="d-inline-block">Scroll Down</h3>
                    </div>
                </div>
                <div class="row justify-content-center mb-5" data-aos="fade-up">
                    <div class="col-md-3 col-sm-12">
                        <h3>Project:</h3>
                        <br>
                        <h1><%= paintSet.name %></h1>
                    </div>
                    <div class="col-md-3 col-sm-12">
                    </div>
                </div>
                <div class="row justify-content-center mt-5 mb-5" data-aos="fade-up">
                    <div class="col-md-6 col-sm-12">
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <h3>Description:</h3>
                        <br>
                        <p class="sm-font">
                            <%= paintSet.description%>
                        </p>
                    </div>
                </div>
                <div class="row justify-content-center mb-5" data-aos="fade-up">
                    <div class="col-md-3 col-sm-12">
                        <h3>Location:</h3>
                        <br>
                        <h1><%= paintSet.location%></h1>
                    </div>
                    <div class="col-md-3 col-sm-12">

                    </div>
                </div>
                <div class="row justify-content-center mb-5" data-aos="fade-up">
                    <div class="col-md-3 col-sm-12">

                    </div>
                    <div class="col-md-3 col-sm-12">
                        <h3>Date:</h3>
                        <br>
                        <h1><%= paintSet.date%></h1>
                    </div>
                </div>
            </div>
            <div id="carousel-start" data-aos-duration="2500" data-aos-delay="500" data-aos="fade-in" class="container mt-5">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                    <div class="carousel-inner justify-content-center text-center">
                        <% for (var i=0;i<paints.length;i++) { %>
                        <% if(i===0) { %>
                            <div class="carousel-item active">
                        <% } else { %>
                            <div class="carousel-item">
                        <% } %>
                                <img class="d-block w-100 ml-auto mr-auto img" src="<%= paints[i].image%>">
                                <div class="carousel-caption d-none">
                                    <h5><%= paints[i].name%></h5>
                                    <p><%= paints[i].caption%></p>
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </div>
    </div>
    </div>
</section>

<% include ./partials/menu.ejs%>


<% include ./partials/footer.ejs%>
